<!-- app/views/daily_questions/show.html.erb -->
<div class="max-w-2xl mx-auto my-8 px-4">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center mb-4">
      <div>
        <p class="text-gray-700"><%= @daily_question.post.user.username %></p>
        <p class="text-xs text-gray-500"><%= @daily_question.post.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>

    <h2 class="text-2xl font-bold mb-4"><%= @daily_question.post.title %></h2>
    
    <div class="mb-6">
      <h3 class="text-lg font-semibold mb-2">今日の一問</h3>
      <div class="p-4 bg-gray-50 rounded-md">
        <p><%= @daily_question.body %></p>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-semibold mb-2">あなたの回答</h3>
      <textarea class="w-full p-3 border rounded-md" rows="4" placeholder="ここに回答を入力"></textarea>
    </div>

    <div class="mt-4">
      <button onclick="toggleAnswer()" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        解答を表示
      </button>
      <div id="answer" class="hidden mt-4 p-4 bg-blue-50 rounded-md">
        <p><%= @daily_question.question_answer %></p>
      </div>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "一覧に戻る", daily_questions_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
    </div>
  </div>
</div>

<script>
  function toggleAnswer() {
    const answerElement = document.getElementById('answer');
    if (answerElement.classList.contains('hidden')) {
      answerElement.classList.remove('hidden');
    } else {
      answerElement.classList.add('hidden');
    }
  }
</script>