<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md mt-8">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'shared/error_messages', resource: resource %>

    <div class="mb-4">
      <%= f.label :username, t('.username'), class: "block text-gray-700 font-medium mb-2" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
      <% if @minimum_password_length %>
      <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500" %>
    </div>

    <div class="mb-6">
      <%= f.submit t('.sign_up'), class: "w-full bg-sky-500 text-white py-2 px-4 rounded-md shadow hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-colors" %>
    </div>
  <% end %>

  <div class="flex justify-between text-sm text-gray-600 mt-4">
    <%= link_to 'トップページへ', root_path, class: "hover:text-sky-500" %>
    <%= link_to 'ログイン', new_user_session_path, class: "hover:text-sky-500" %>
  </div>
</div>