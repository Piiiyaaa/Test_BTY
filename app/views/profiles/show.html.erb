<div class="container mx-auto my-8 px-4">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex flex-col items-center mb-6">
      <h1 class="text-xl font-bold"><%= @user.username %></h1>
      <p class="text-gray-600 mt-2"><%= @user.bio %></p>
      
      <% if current_user == @user %>
        <%= link_to '編集', edit_profile_path, class: 'mt-4 bg-orange-500 hover:bg-orange-600 text-white py-2 px-4 rounded' %>
      <% end %>
    </div>
    
    <h2 class="text-lg font-semibold mb-4 border-b pb-2">投稿一覧</h2>
    
    <div class="grid gap-6">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center mb-4">
                    <div class="text-gray-500 mr-4">
                        <%= post.user.username %>
                        <%= l(post.created_at.to_date, format: :short) %>
                    </div>
                </div>
                
                <h3 class="text-xl font-semibold mt-3 mb-2">
                    <%= link_to post.title, posts_path, class: "text-blue-600 hover:text-blue-800" %>
                </h3>

                <div>
                  <p><%= post.body.truncate(100) %></p>
                </div>
            </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">投稿がありません</p>
      <% end %>
    </div>
  </div>
</div>